{
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "google"],
  "rules": {
    "prefer-spread": 0,
    "linebreak-style": 0,
    "no-console": [
      "error",
      {
        "allow": ["warn", "error", "log"]
      }
    ],
    "no-var": "error",
    "prefer-const": "warn",
    "arrow-body-style": ["error", "as-needed"],
    "object-shorthand": ["error", "always"]
  }
}
